{
    "name": "menkaff/metrics",
    "description": "Prometheus metric feature",
    "license": "MIT",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Menkaff\\Metrics\\": "src/"
        }
    },
    "require": {
        "php": "^7.1.3",
        "promphp/prometheus_client_php": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "discard-changes": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Menkaff\\Metrics\\Providers\\PrometheusServiceProvider"
            ]
        }
    },
    "prefer-stable": true
}
